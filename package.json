{
	"name": "ith2ome",
	"displayName": "ITH2Ome",
	"description": "IT之家第三方插件，划水特供版",
	"version": "1.12.0",
	"author": "https://github.com/Tai-Zhou",
	"repository": {
		"type": "git",
		"url": "https://github.com/Tai-Zhou/ITH2Ome.git"
	},
	"qna": "https://github.com/Tai-Zhou/ITH2Ome/discussions",
	"bugs": {
		"url": "https://github.com/Tai-Zhou/ITH2Ome/issues"
	},
	"license": "MIT",
	"keywords": [
		"IT",
		"之家",
		"ithome",
		"水"
	],
	"publisher": "astro-tai",
	"icon": "img/icon.png",
	"engines": {
		"vscode": "^1.88.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [],
	"main": "./out/main.js",
	"extensionKind": [
		"ui"
	],
	"contributes": {
		"viewsContainers": {
			"activitybar": [
				{
					"id": "ith2ome",
					"title": "ITH2Ome",
					"icon": "img/icon.svg"
				}
			]
		},
		"views": {
			"ith2ome": [
				{
					"id": "ith2ome.account",
					"name": "通行证"
				},
				{
					"id": "ith2ome.latest",
					"name": "最新"
				},
				{
					"id": "ith2ome.hot",
					"name": "热榜"
				},
				{
					"id": "ith2ome.comment",
					"name": "热评"
				}
			]
		},
		"commands": [
			{
				"command": "ith2ome.login",
				"title": "登录"
			},
			{
				"command": "ith2ome.logout",
				"title": "退出",
				"icon": "$(log-out)"
			},
			{
				"command": "ith2ome.accountRefresh",
				"title": "刷新",
				"icon": "$(refresh)"
			},
			{
				"command": "ith2ome.showContent",
				"title": "查看内容"
			},
			{
				"command": "ith2ome.share",
				"title": "复制到剪贴板以分享",
				"icon": "$(clippy)"
			},
			{
				"command": "ith2ome.openBrowser",
				"title": "在浏览器中查看",
				"icon": "$(globe)"
			},
			{
				"command": "ith2ome.latestRefresh",
				"title": "刷新",
				"icon": "$(refresh)"
			},
			{
				"command": "ith2ome.daily",
				"title": "日榜"
			},
			{
				"command": "ith2ome.weekly",
				"title": "周榜"
			},
			{
				"command": "ith2ome.comment",
				"title": "热评"
			},
			{
				"command": "ith2ome.monthly",
				"title": "月榜"
			},
			{
				"command": "ith2ome.hotRefresh",
				"title": "刷新",
				"icon": "$(refresh)"
			},
			{
				"command": "ith2ome.commentRefresh",
				"title": "刷新",
				"icon": "$(refresh)"
			}
		],
		"menus": {
			"view/title": [
				{
					"command": "ith2ome.accountRefresh",
					"when": "view == ith2ome.account",
					"group": "navigation"
				},
				{
					"command": "ith2ome.latestRefresh",
					"when": "view == ith2ome.latest",
					"group": "navigation"
				},
				{
					"command": "ith2ome.daily",
					"when": "view == ith2ome.hot",
					"group": "navigation@0"
				},
				{
					"command": "ith2ome.weekly",
					"when": "view == ith2ome.hot",
					"group": "navigation@1"
				},
				{
					"command": "ith2ome.comment",
					"when": "view == ith2ome.hot",
					"group": "navigation@2"
				},
				{
					"command": "ith2ome.monthly",
					"when": "view == ith2ome.hot",
					"group": "navigation@3"
				},
				{
					"command": "ith2ome.hotRefresh",
					"when": "view == ith2ome.hot",
					"group": "navigation@4"
				},
				{
					"command": "ith2ome.commentRefresh",
					"when": "view == ith2ome.comment",
					"group": "navigation"
				}
			],
			"view/item/context": [
				{
					"command": "ith2ome.logout",
					"when": "view == ith2ome.account && viewItem == ith2ome.account",
					"group": "inline"
				},
				{
					"command": "ith2ome.share",
					"when": "viewItem == ith2ome.article",
					"group": "inline@0"
				},
				{
					"command": "ith2ome.openBrowser",
					"when": "viewItem == ith2ome.article",
					"group": "inline@1"
				}
			]
		},
		"configuration": {
			"title": "ITH2Ome",
			"properties": {
				"ith2ome.account": {
					"type": "string",
					"default": "",
					"description": "通行证 Cookie。"
				},
				"ith2ome.signReminder": {
					"type": "boolean",
					"default": true,
					"description": "未签到时是否提醒。"
				},
				"ith2ome.showPreviewImages": {
					"type": "boolean",
					"default": true,
					"description": "预览内容时是否显示图片。"
				},
				"ith2ome.titleLength": {
					"type": "integer",
					"default": 15,
					"description": "查看内容标签页标题长度。"
				},
				"ith2ome.imageWidth": {
					"type": "integer",
					"default": 1280,
					"description": "查看内容时正文显示图片最大像素宽度，设置为 0 时不显示图片。"
				},
				"ith2ome.imageScale": {
					"type": "number",
					"default": 1.0,
					"description": "查看内容时正文图片的缩放倍数，设置为 1.0 时不放大图片。"
				},
				"ith2ome.imageScaleMethod": {
					"type": "integer",
					"default": 0,
					"description": "图片缩放的触发方式，设置为 0 时为鼠标悬浮，1 为长按，2 为点击。"
				},
				"ith2ome.videoWidth": {
					"type": "integer",
					"default": 1280,
					"description": "查看内容时显示视频最大像素宽度，设置为 0 时不显示视频。"
				},
				"ith2ome.showRelated": {
					"type": "boolean",
					"default": true,
					"description": "查看内容时是否显示相关文章。"
				},
				"ith2ome.showComment": {
					"type": "boolean",
					"default": true,
					"description": "查看内容时是否显示评论。"
				},
				"ith2ome.showAvatar": {
					"type": "boolean",
					"default": true,
					"description": "查看评论时是否显示头像。"
				},
				"ith2ome.commentImageWidth": {
					"type": "integer",
					"default": 320,
					"description": "查看评论时显示评论图片最大像素宽度，设置为 0 时不显示图片。"
				},
				"ith2ome.commentImageScale": {
					"type": "number",
					"default": 2.0,
					"description": "查看评论时评论图片的缩放倍数，设置为 1.0 时不放大图片。"
				},
				"ith2ome.commentOrder": {
					"type": "boolean",
					"default": false,
					"description": "查看内容时显示评论是否顺序，默认设置为最新在前。"
				},
				"ith2ome.blurNegativeComment": {
					"type": "boolean",
					"default": true,
					"description": "查看内容时是否模糊反对多于支持的评论。"
				},
				"ith2ome.autoRefresh": {
					"type": "integer",
					"default": 300,
					"description": "“最新”自动刷新时间间隔，设置为 0 时禁用自动刷新，反之为时间间隔（秒）。"
				},
				"ith2ome.keyWords": {
					"type": "array",
					"default": [
						"承认",
						"喜加一",
						"垄断",
						"航天",
						"C919"
					],
					"description": "关键词列表，会在标题列表内强调显示。"
				},
				"ith2ome.blockWords": {
					"type": "array",
					"default": [
						"技嘉"
					],
					"description": "屏蔽词列表，标题含有屏蔽词时将不显示在“最新”列表内。"
				},
				"ith2ome.defaultPeriod": {
					"type": "integer",
					"default": 0,
					"description": "“热榜”默认榜单，设置为 0 时默认显示日榜，1 为周榜，2 为热评，3 为月榜。"
				},
				"ith2ome.showThumbs": {
					"type": "boolean",
					"default": true,
					"description": "“热评”是否显示点赞数。"
				},
				"ith2ome.hideAd": {
					"type": "boolean",
					"default": false,
					"description": "“最新”列表是否隐藏广告文章。"
				},
				"ith2ome.hideAdTips": {
					"type": "boolean",
					"default": true,
					"description": "查看内容是否隐藏广告声明。"
				}
			}
		}
	},
	"capabilities": {
		"untrustedWorkspaces": {
			"supported": true
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run esbuild-base -- --minify",
		"esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=out/main.js --external:vscode --format=cjs --platform=node",
		"esbuild": "npm run esbuild-base -- --sourcemap",
		"esbuild-watch": "npm run esbuild-base -- --sourcemap --watch",
		"deploy": "vsce publish"
	},
	"devDependencies": {
		"@types/crypto-js": "^4.2.2",
		"@types/node": "^22.9.0",
		"@types/superagent": "^8.1.9",
		"@types/vscode": "^1.95.0",
		"@typescript-eslint/eslint-plugin": "^8.13.0",
		"@typescript-eslint/parser": "^8.13.0",
		"@vscode/vsce": "^3.2.1",
		"crypto-js": "^4.2.0",
		"esbuild": "^0.24.0",
		"eslint": "^9.14.0",
		"superagent": "^10.1.1",
		"typescript": "^5.6.3"
	}
}
